<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F0F0"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bo_bottom">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"/>

        <LinearLayout
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:background="@drawable/botron">

            <EditText
                android:id="@+id/ed_timKiem"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:hint="Tìm kiếm..."
                android:textSize="13sp"
                android:textColor="#8F8B8B"
                android:background="@drawable/botrontrong"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp" />
            <ImageView
                android:id="@+id/img_timKiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/timkiem"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top sản phẩm mới:"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/botron"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/anh_sp"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giày Nike Air Force 1 Low Cream Black Swoosh"
            android:textSize="10dp"/>
    </LinearLayout>

</LinearLayout>