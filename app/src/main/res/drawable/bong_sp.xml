<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#888888" /> <!-- Màu của bóng -->
            <corners android:radius="10dp" /> <!-- Bo góc của bóng -->
        </shape>
    </item>

    <!-- Hình chính -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" /> <!-- Màu nền của hình -->
            <corners android:radius="10dp" /> <!-- Bo góc của hình -->
        </shape>
    </item>
</layer-list>